<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp">
        <activity android:name=".QuizQuestionsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.NoActionBar"></activity>
        <activity android:name=".Zwierzeta"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.NoActionBar"></activity>
        <activity android:name=".auta"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.NoActionBar"></activity>
        <activity android:name=".Loga"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.NoActionBar"></activity>
        <activity
            android:name=".Rejestracja"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="Logowanie"></activity>

        <activity
            android:name=".MainActivity"
            android:label="Home Screen"></activity>

    </application>

</manifest>