<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jaką kategorię wybierasz?"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <Button
        android:id="@+id/btn_flagi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:insetTop="15dp"
        android:insetBottom="15dp"
        android:text="Flagi"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_Zwierzeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetTop="15dp"
        android:insetBottom="15dp"
        android:text="Zwierzeta"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_flagi"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_auta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetTop="15dp"
        android:insetBottom="15dp"
        android:text="Marki aut"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Zwierzeta"
        tools:layout_editor_absoluteX="-36dp" />

    <Button
        android:id="@+id/btn_Loga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetTop="15dp"
        android:insetBottom="15dp"
        android:text="Loga Firm"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_auta"
        tools:layout_editor_absoluteX="-26dp" />
</androidx.constraintlayout.widget.ConstraintLayout>